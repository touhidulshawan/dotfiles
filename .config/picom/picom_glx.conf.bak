backend = "glx";
glx-no-stencil = true;
glx-copy-from-front = false;

# Opacity
active-opacity = 1;
inactive-opacity = 1;
frame-opacity = 1;
inactive-opacity-override = false;
blur-background = true;
blur-background-exclude = [
  "class_g = 'firefox' && argb",
  "class_g = 'librewolf' && argb",
  "class_g = 'obs'",
  "class_g = 'copyq'",
  "class_g = 'VirtualBox Manager'",
  "class_g = 'VirtualBox Machine'",
  "class_g = 'vlc'",
  "class_g = 'Wireshark'",
];

blur-method = "dual_kawase";
blur-strength = 6;

# Fading
fading = false;
fade-delta = 4;
no-fading-openclose = false;

fade-exclude = [ ];

# Other
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = true;
vsync = true;
dbe = false;
unredir-if-possible = false;
focus-exclude = [ ];
detect-transient = true;
detect-client-leader = true;

# Window type settings
wintypes:
{
    dock = { shadow = true;};
    dnd = { shadow = false;};

};

opacity-rule = [
    "90:class_g = 'Alacritty' && focused",
    "70:class_g = 'Alacritty' && !focused",
    "90:class_g = 'Emacs' && focused",
    "70:class_g = 'Emacs' && !focused",
];

shadow = true;
shadow-radius = 9;
shadow-opacity = 0.7
shadow-offset-x = -6;
shadow-offset-y = -6;

shadow-exclude = [
  "! name~=''",
  "name = 'Notification'",
  "class_g = 'Conky'",
  "class_g ?= 'Notify-osd'",
  "class_g = 'Cairo-clock'",
  "name *= 'compton'",
  "name *= 'picom'",
  "class_g = 'firefox' && argb",
  "class_g = 'librewolf' && argb",
  "class_g = 'obs'",
  "class_g = 'copyq'",
  "class_g = 'VirtualBox Manager'",
  "class_g = 'VirtualBox Machine'",
  "class_g = 'vlc'",
  "class_g = 'Wireshark'",
  "_GTK_FRAME_EXTENTS@:c",
  "_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'"
];

corner-radius = 6
rounded-corners-exclude = [
  "window_type = 'dock'",
  "window_type = 'desktop'"
];

xrender-sync-fence = true;
