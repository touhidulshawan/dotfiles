#!/bin/bash

anime_path="$HOME/Pictures/wallpapers/anime/*"
gruvbox_path="$HOME/Pictures/wallpapers/gruvbox/*"
anime_gruvbox_path="$HOME/Pictures/wallpapers/anime-gruvbox/*"

case "$1" in
"show") sxiv -tro $anime_path $gruvbox_path $anime_gruvbox_path | xargs feh --bg-fill || exit ;;
"random") feh --recursive --bg-fill --randomize $anime_path ;;
esac
